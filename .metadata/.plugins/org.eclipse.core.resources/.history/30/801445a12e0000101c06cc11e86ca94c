/* USER CODE BEGIN Includes */
#include <math.h>
#include "arm_math.h"
/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define WAVE_SAMPLES 100
#define NUM_SAMPLES 8

#define SIN_SAMPLES 441
#define SAMPLING_RATE 44100
#define C6 1046.50
#define E6 1318.51
#define G6 1567.98

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
DAC_HandleTypeDef hdac1;
DMA_HandleTypeDef hdma_dac1_ch1;

TIM_HandleTypeDef htim2;

/* USER CODE BEGIN PV */
uint8_t wave_index;  // Tracks active waveform
uint8_t triangle_wave[WAVE_SAMPLES];
uint8_t sawtooth_wave[WAVE_SAMPLES];
uint8_t sinusoid_wave[WAVE_SAMPLES];
float sine_wave[SIN_SAMPLES];
uint32_t TIMindex;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_DMA_Init(void);
static void MX_DAC1_Init(void);
